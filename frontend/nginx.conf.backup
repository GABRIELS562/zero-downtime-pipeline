server {
    listen 80;
    server_name localhost;
    root /usr/share/nginx/html;
    index index-landing.html index.html;

    # Security headers for Cloudflare compatibility
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;
    
    # CORS headers for API calls
    add_header Access-Control-Allow-Origin "*" always;
    add_header Access-Control-Allow-Methods "GET, POST, OPTIONS" always;
    add_header Access-Control-Allow-Headers "DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range,Authorization" always;
    
    # Handle preflight requests
    if ($request_method = 'OPTIONS') {
        add_header Access-Control-Allow-Origin "*";
        add_header Access-Control-Allow-Methods "GET, POST, OPTIONS";
        add_header Access-Control-Allow-Headers "DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range,Authorization";
        add_header Access-Control-Max-Age 1728000;
        add_header Content-Type 'text/plain; charset=utf-8';
        add_header Content-Length 0;
        return 204;
    }

    # Main landing page
    location = / {
        try_files /index-landing.html =404;
    }

    # Finance Trading Dashboard
    location /trading {
        try_files /index.html =404;
    }

    # Pharma Manufacturing Dashboard  
    location /pharma {
        try_files /pharma-dashboard.html =404;
    }

    # FDA Compliance Demo
    location /fda {
        try_files /fda-compliance-demo.html =404;
    }

    # Static assets
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg)$ {
        expires 1d;
        add_header Cache-Control "public, immutable";
    }

    # Health check endpoint
    location /health {
        access_log off;
        return 200 '{"status": "healthy", "timestamp": "$time_iso8601", "service": "frontend-dashboard"}';
        add_header Content-Type application/json;
        add_header Access-Control-Allow-Origin "*";
    }

    # Detailed health check
    location /api/health {
        access_log off;
        return 200 '{"status": "healthy", "timestamp": "$time_iso8601", "service": "frontend-dashboard", "version": "1.0.0", "nginx_version": "$nginx_version"}';
        add_header Content-Type application/json;
        add_header Access-Control-Allow-Origin "*";
    }

    # Error pages
    error_page 404 /404.html;
    location = /404.html {
        root /usr/share/nginx/html;
        internal;
    }

    # Gzip compression for better performance
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/javascript application/xml+rss application/json;
}