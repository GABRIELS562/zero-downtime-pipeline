# Finance Trading Application Environment Configuration

# Application Configuration
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8080
WORKERS=1
DEBUG=true

# Build Information (populated by CI/CD)
BUILD_ID=local-dev
GIT_COMMIT=unknown
BUILD_TIMESTAMP=unknown

# Database Configuration
DATABASE_URL=postgresql://trading_user:trading_pass@localhost:5432/trading_db
REDIS_URL=redis://localhost:6379/0

# Market Data Configuration
MARKET_DATA_PROVIDER=simulation
MARKET_DATA_API_KEY=your_api_key_here
MARKET_DATA_WEBSOCKET_URL=wss://api.marketdata.com/v1/stream

# Trading Configuration
TRADING_HOURS_START=09:30
TRADING_HOURS_END=16:00
TRADING_TIMEZONE=America/New_York
MAX_ORDER_SIZE=1000000
RISK_LIMIT_DAILY=10000000

# Compliance Configuration
SOX_COMPLIANCE_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years
ENCRYPTION_KEY=your_encryption_key_here

# Monitoring Configuration
PROMETHEUS_ENABLED=true
METRICS_PORT=9090
LOG_LEVEL=INFO
HEALTH_CHECK_INTERVAL=30

# AWS Configuration (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# External Services
NOTIFICATION_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
ALERT_EMAIL=alerts@yourcompany.com