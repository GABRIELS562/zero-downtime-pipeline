# Staging Environment Configuration
# This file contains staging-specific environment variables

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_ENV=staging
APP_NAME=finance-trading
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=info
RELOAD=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=postgres
DB_PORT=5432
DB_USER=trading_user
DB_PASSWORD=staging_password_change_me
DB_NAME=trading_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_ECHO=false

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=staging-secret-key-change-in-production
CORS_ORIGINS=https://staging.yourdomain.com
ALLOWED_HOSTS=staging.yourdomain.com,localhost
SECURE_COOKIES=true

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
MARKET_DATA_PROVIDER=demo
ORDER_EXECUTION_MODE=simulation
TRADING_HOURS_START=09:30
TRADING_HOURS_END=16:00
TRADING_TIMEZONE=US/Eastern

# =============================================================================
# COMPLIANCE CONFIGURATION
# =============================================================================
SOX_COMPLIANCE_ENABLED=true
AUDIT_LOG_LEVEL=info
COMPLIANCE_REPORTING_ENABLED=true
DATA_RETENTION_YEARS=7
ENCRYPTION_ENABLED=true

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
METRICS_ENABLED=true
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=30
OTEL_TRACES_ENABLED=true
OTEL_METRICS_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:4317

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
WORKERS=2
TIMEOUT=30
KEEPALIVE=5

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
MARKET_DATA_API_KEY=staging-market-data-key
ORDER_EXECUTION_API_KEY=staging-execution-key

# =============================================================================
# NOTIFICATION SERVICES
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/STAGING/WEBHOOK

# =============================================================================
# DOCKER PORTS
# =============================================================================
APP_PORT=8000
NGINX_PORT=80
PROMETHEUS_PORT=9091
GRAFANA_PORT=3000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5