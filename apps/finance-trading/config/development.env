# Development Environment Configuration
# This file contains development-specific environment variables

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_ENV=development
APP_NAME=finance-trading
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=debug
RELOAD=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=postgres
DB_PORT=5432
DB_USER=trading_user
DB_PASSWORD=trading_password
DB_NAME=trading_db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=true

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=dev-secret-key-change-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8080
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,host.docker.internal
SECURE_COOKIES=false

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
MARKET_DATA_PROVIDER=simulation
ORDER_EXECUTION_MODE=simulation
TRADING_HOURS_START=09:30
TRADING_HOURS_END=16:00
TRADING_TIMEZONE=US/Eastern

# =============================================================================
# ALPHA VANTAGE CONFIGURATION (OPTIONAL)
# =============================================================================
# Get free API key from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_free_api_key_here
ALPHA_VANTAGE_BASE_URL=https://www.alphavantage.co/query
ALPHA_VANTAGE_RATE_LIMIT=5
ALPHA_VANTAGE_TIMEOUT=10

# =============================================================================
# COMPLIANCE CONFIGURATION
# =============================================================================
SOX_COMPLIANCE_ENABLED=true
AUDIT_LOG_LEVEL=debug
COMPLIANCE_REPORTING_ENABLED=true
DATA_RETENTION_YEARS=7
ENCRYPTION_ENABLED=false

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
METRICS_ENABLED=true
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=30
OTEL_TRACES_ENABLED=false
OTEL_METRICS_ENABLED=false

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
WORKERS=2
TIMEOUT=60
KEEPALIVE=5

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
PGADMIN_EMAIL=admin@trading.com
PGADMIN_PASSWORD=admin
GRAFANA_PASSWORD=admin
REDIS_COMMANDER_PORT=8081

# =============================================================================
# DOCKER PORTS
# =============================================================================
APP_PORT=8000
NGINX_PORT=80
PROMETHEUS_PORT=9091
GRAFANA_PORT=3000
PGADMIN_PORT=5050