# Environment Configuration Template
# Copy this file to .env and configure for your environment

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_ENV=development
APP_NAME=finance-trading
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=debug
SECRET_KEY=your-secret-key-change-in-production
RELOAD=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=trading_user
DB_PASSWORD=trading_password
DB_NAME=trading_db
DB_SCHEMA=public

# Database Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true
DB_POOL_RESET_ON_RETURN=commit

# Database Performance
DB_ECHO=false
DB_ECHO_POOL=false
DB_QUERY_CACHE_SIZE=1200
DB_ISOLATION_LEVEL=READ_COMMITTED

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=100
REDIS_TIMEOUT=5

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
SECURE_COOKIES=false
SESSION_TIMEOUT=3600
CSRF_PROTECTION=true
RATE_LIMITING_ENABLED=true

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
MARKET_DATA_PROVIDER=demo
ORDER_EXECUTION_MODE=simulation
TRADING_HOURS_START=09:30
TRADING_HOURS_END=16:00
TRADING_TIMEZONE=US/Eastern

# Risk Management
RISK_MANAGEMENT_ENABLED=true
MAX_POSITION_SIZE=1000000
MAX_DAILY_LOSS=50000
MAX_LEVERAGE=4.0

# =============================================================================
# COMPLIANCE CONFIGURATION
# =============================================================================
SOX_COMPLIANCE_ENABLED=true
AUDIT_LOG_LEVEL=info
COMPLIANCE_REPORTING_ENABLED=true
DATA_RETENTION_YEARS=7
ENCRYPTION_ENABLED=true

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
METRICS_ENABLED=true
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=finance-trading
OTEL_TRACES_ENABLED=true
OTEL_METRICS_ENABLED=true
OTEL_LOGS_ENABLED=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100
TIMEOUT=30
KEEPALIVE=5
PRELOAD_APP=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Market Data Provider
MARKET_DATA_API_KEY=your-market-data-api-key
MARKET_DATA_API_SECRET=your-market-data-api-secret
MARKET_DATA_BASE_URL=https://api.marketdata.com

# Order Execution Provider
ORDER_EXECUTION_API_KEY=your-execution-api-key
ORDER_EXECUTION_API_SECRET=your-execution-api-secret
ORDER_EXECUTION_BASE_URL=https://api.broker.com

# Notification Services
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
TESTING=false
TEST_DATABASE_URL=postgresql://trading_user:trading_password@localhost:5432/trading_db_test

# Development Tools
PGADMIN_EMAIL=admin@trading.com
PGADMIN_PASSWORD=admin
GRAFANA_PASSWORD=admin
REDIS_COMMANDER_PORT=8081

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================
BUILD_ID=local-build
GIT_COMMIT=local-commit
BUILD_TIMESTAMP=2024-01-01T00:00:00Z

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
APP_PORT=8000
METRICS_PORT=9090
NGINX_PORT=80
NGINX_SSL_PORT=443
PROMETHEUS_PORT=9091
GRAFANA_PORT=3000
PGADMIN_PORT=5050

# =============================================================================
# ENVIRONMENT SPECIFIC OVERRIDES
# =============================================================================

# Development
# APP_ENV=development
# DEBUG=true
# LOG_LEVEL=debug
# DB_ECHO=true
# RELOAD=true

# Staging
# APP_ENV=staging
# DEBUG=false
# LOG_LEVEL=info
# DB_ECHO=false
# RELOAD=false

# Production
# APP_ENV=production
# DEBUG=false
# LOG_LEVEL=warning
# DB_ECHO=false
# RELOAD=false
# SECURE_COOKIES=true
# CORS_ORIGINS=https://yourdomain.com
# ALLOWED_HOSTS=yourdomain.com