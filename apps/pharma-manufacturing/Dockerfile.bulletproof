# Pharmaceutical Manufacturing System - Production Ready Dockerfile
FROM python:3.11-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONPATH=/app

# Create non-root user for security
RUN groupadd -r appuser && useradd -r -g appuser appuser

# Install system dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    gcc \
    g++ \
    libc6-dev \
    curl \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Set working directory
WORKDIR /app

# Create necessary directories with proper permissions
RUN mkdir -p /app/logs /tmp && \
    chown -R appuser:appuser /app /tmp

# Copy and install Python dependencies first (for better caching)
COPY requirements-bulletproof.txt /app/requirements.txt

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . /app/

# Ensure all __init__.py files exist (critical for Python imports)
RUN touch /app/src/__init__.py \
    /app/src/api/__init__.py \
    /app/src/services/__init__.py \
    /app/src/middleware/__init__.py \
    /app/src/models/__init__.py \
    /app/src/database/__init__.py \
    /app/src/database/migrations/__init__.py \
    /app/src/database/schemas/__init__.py

# Set correct permissions
RUN chown -R appuser:appuser /app

# Switch to non-root user
USER appuser

# Create log directory
RUN mkdir -p /app/logs

# Expose port
EXPOSE 8000

# Set environment variables
ENV FDA_VALIDATION_ENABLED=false
ENV API_KEY=pharma-default-key
ENV DATABASE_URL=sqlite:///app/pharma.db

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Start command using startup wrapper with automatic fallback
CMD ["python", "-m", "uvicorn", "src.startup:app", "--host", "0.0.0.0", "--port", "8000"]