{
  "dashboard": {
    "id": null,
    "title": "Executive Deployment Overview - Business Impact Dashboard",
    "tags": ["executive", "deployment", "business", "overview"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-7d",
      "to": "now"
    },
    "templating": {
      "list": [
        {
          "name": "environment",
          "type": "query",
          "query": "label_values(deployment_status, environment)",
          "current": {
            "value": "All"
          },
          "multi": true,
          "includeAll": true
        },
        {
          "name": "application",
          "type": "query",
          "query": "label_values(deployment_status, application)",
          "current": {
            "value": "All"
          },
          "multi": true,
          "includeAll": true
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Deployment Success Rate - 7 Days",
        "type": "stat",
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "(sum(rate(deployment_total{status=\"success\", environment=~\"$environment\", application=~\"$application\"}[7d])) / sum(rate(deployment_total{environment=~\"$environment\", application=~\"$application\"}[7d]))) * 100",
            "legendFormat": "Success Rate %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow", 
                  "value": 95
                },
                {
                  "color": "green",
                  "value": 99
                }
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 2,
        "title": "Mean Time to Recovery (MTTR)",
        "type": "stat",
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 8,
          "y": 0
        },
        "targets": [
          {
            "expr": "avg(deployment_mttr_seconds{environment=~\"$environment\", application=~\"$application\"}) / 60",
            "legendFormat": "MTTR (minutes)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 15
                },
                {
                  "color": "red",
                  "value": 30
                }
              ]
            },
            "unit": "m",
            "decimals": 1
          }
        }
      },
      {
        "id": 3,
        "title": "Total Deployments This Week",
        "type": "stat",
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 16,
          "y": 0
        },
        "targets": [
          {
            "expr": "sum(increase(deployment_total{environment=~\"$environment\", application=~\"$application\"}[7d]))",
            "legendFormat": "Total Deployments",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "blue",
                  "value": 0
                }
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 4,
        "title": "Business Impact Summary",
        "type": "table",
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 6
        },
        "targets": [
          {
            "expr": "sum by (application, environment) (deployment_business_impact_score{environment=~\"$environment\", application=~\"$application\"})",
            "legendFormat": "{{application}} - {{environment}}",
            "refId": "A",
            "format": "table"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true
              },
              "indexByName": {
                "application": 0,
                "environment": 1,
                "Value": 2
              },
              "renameByName": {
                "application": "Application",
                "environment": "Environment",
                "Value": "Business Impact Score"
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 50
                },
                {
                  "color": "red",
                  "value": 75
                }
              ]
            },
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Business Impact Score"
              },
              "properties": [
                {
                  "id": "custom.displayMode",
                  "value": "lcd-gauge"
                }
              ]
            }
          ]
        }
      },
      {
        "id": 5,
        "title": "Deployment Frequency Trends",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 14
        },
        "targets": [
          {
            "expr": "sum by (application) (rate(deployment_total{environment=~\"$environment\", application=~\"$application\"}[1h]))",
            "legendFormat": "{{application}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "gradientMode": "none",
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "pointSize": 5,
              "scaleDistribution": {
                "type": "linear"
              },
              "showPoints": "auto",
              "spanNulls": false,
              "stacking": {
                "group": "A",
                "mode": "none"
              },
              "thresholdsStyle": {
                "mode": "off"
              }
            },
            "unit": "ops"
          }
        }
      },
      {
        "id": 6,
        "title": "Rollback Rate by Application",
        "type": "piechart",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 14
        },
        "targets": [
          {
            "expr": "sum by (application) (rate(deployment_rollback_total{environment=~\"$environment\", application=~\"$application\"}[7d]))",
            "legendFormat": "{{application}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              }
            },
            "unit": "ops"
          }
        }
      },
      {
        "id": 7,
        "title": "Deployment Performance KPIs",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 24,
          "x": 0,
          "y": 22
        },
        "targets": [
          {
            "expr": "avg(deployment_duration_seconds{environment=~\"$environment\", application=~\"$application\"}) / 60",
            "legendFormat": "Avg Deploy Time (min)",
            "refId": "A"
          },
          {
            "expr": "sum(rate(deployment_total{status=\"failed\", environment=~\"$environment\", application=~\"$application\"}[7d])) * 86400",
            "legendFormat": "Failed Deployments/Day",
            "refId": "B"
          },
          {
            "expr": "avg(deployment_lead_time_hours{environment=~\"$environment\", application=~\"$application\"})",
            "legendFormat": "Avg Lead Time (hours)",
            "refId": "C"
          },
          {
            "expr": "sum(rate(deployment_hotfix_total{environment=~\"$environment\", application=~\"$application\"}[7d])) * 86400",
            "legendFormat": "Hotfixes/Day",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 50
                },
                {
                  "color": "red",
                  "value": 100
                }
              ]
            },
            "unit": "short",
            "decimals": 1
          }
        }
      },
      {
        "id": 8,
        "title": "Deployment Risk Assessment",
        "type": "heatmap",
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 26
        },
        "targets": [
          {
            "expr": "deployment_risk_score{environment=~\"$environment\", application=~\"$application\"}",
            "legendFormat": "{{application}} - {{environment}}",
            "refId": "A",
            "format": "heatmap"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "continuous-GrYlRd"
            },
            "custom": {
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              }
            }
          }
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "builtIn": 1,
          "datasource": "-- Grafana --",
          "enable": true,
          "hide": true,
          "iconColor": "rgba(0, 211, 255, 1)",
          "name": "Annotations & Alerts",
          "type": "dashboard"
        },
        {
          "datasource": "prometheus",
          "enable": true,
          "expr": "deployment_total{status=\"failed\"}",
          "iconColor": "red",
          "name": "Failed Deployments",
          "titleFormat": "Deployment Failed",
          "textFormat": "{{application}} deployment failed in {{environment}}"
        },
        {
          "datasource": "prometheus",
          "enable": true,
          "expr": "deployment_rollback_total > 0",
          "iconColor": "orange",
          "name": "Rollbacks",
          "titleFormat": "Rollback Executed",
          "textFormat": "{{application}} rolled back in {{environment}}"
        }
      ]
    }
  }
}