{
  "dashboard": {
    "id": null,
    "title": "Deployment Performance & MTTR Analytics",
    "tags": ["deployment", "performance", "mttr", "reliability", "devops"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-30d",
      "to": "now"
    },
    "templating": {
      "list": [
        {
          "name": "environment",
          "type": "query",
          "query": "label_values(deployment_duration_seconds, environment)",
          "current": {
            "value": "All"
          },
          "multi": true,
          "includeAll": true
        },
        {
          "name": "application",
          "type": "query",
          "query": "label_values(deployment_duration_seconds, application)",
          "current": {
            "value": "All"
          },
          "multi": true,
          "includeAll": true
        },
        {
          "name": "team",
          "type": "query",
          "query": "label_values(deployment_duration_seconds, team)",
          "current": {
            "value": "All"
          },
          "multi": true,
          "includeAll": true
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Deployment Success Rate - 30 Days",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "(sum(increase(deployment_total{status=\"success\", environment=~\"$environment\", application=~\"$application\", team=~\"$team\"}[30d])) / sum(increase(deployment_total{environment=~\"$environment\", application=~\"$application\", team=~\"$team\"}[30d]))) * 100",
            "legendFormat": "Success Rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 95
                },
                {
                  "color": "green",
                  "value": 99
                }
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 2,
        "title": "Mean Time to Recovery (MTTR)",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 0
        },
        "targets": [
          {
            "expr": "avg(deployment_mttr_seconds{environment=~\"$environment\", application=~\"$application\", team=~\"$team\"}) / 60",
            "legendFormat": "MTTR",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 15
                },
                {
                  "color": "red",
                  "value": 30
                }
              ]
            },
            "unit": "m",
            "decimals": 1
          }
        }
      },
      {
        "id": 3,
        "title": "Deployment Frequency",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "sum(increase(deployment_total{environment=~\"$environment\", application=~\"$application\", team=~\"$team\"}[7d])) / 7",
            "legendFormat": "Deployments/Day",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 1
                },
                {
                  "color": "green",
                  "value": 3
                }
              ]
            },
            "unit": "short",
            "decimals": 1
          }
        }
      },
      {
        "id": 4,
        "title": "Change Failure Rate",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 0
        },
        "targets": [
          {
            "expr": "(sum(increase(deployment_total{status=\"failed\", environment=~\"$environment\", application=~\"$application\", team=~\"$team\"}[30d])) / sum(increase(deployment_total{environment=~\"$environment\", application=~\"$application\", team=~\"$team\"}[30d]))) * 100",
            "legendFormat": "Failure Rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 5
                },
                {
                  "color": "red",
                  "value": 10
                }
              ]
            },
            "unit": "percent",
            "decimals": 1
          }
        }
      },
      {
        "id": 5,
        "title": "Deployment Duration Trends",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 4
        },
        "targets": [
          {
            "expr": "avg_over_time(deployment_duration_seconds{environment=~\"$environment\", application=~\"$application\", team=~\"$team\"}[1d]) / 60",
            "legendFormat": "{{application}} - {{environment}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "gradientMode": "none",
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "pointSize": 5,
              "scaleDistribution": {
                "type": "linear"
              },
              "showPoints": "auto",
              "spanNulls": false,
              "stacking": {
                "group": "A",
                "mode": "none"
              },
              "thresholdsStyle": {
                "mode": "off"
              }
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "red",
                  "value": 80
                }
              ]
            },
            "unit": "m"
          }
        }
      },
      {
        "id": 6,
        "title": "MTTR by Application",
        "type": "barchart",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 4
        },
        "targets": [
          {
            "expr": "avg by (application) (deployment_mttr_seconds{environment=~\"$environment\", application=~\"$application\", team=~\"$team\"}) / 60",
            "legendFormat": "{{application}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisPlacement": "auto",
              "barAlignment": 0,
              "displayMode": "list",
              "orientation": "horizontal"
            },
            "unit": "m"
          }
        }
      },
      {
        "id": 7,
        "title": "Deployment Status Distribution",
        "type": "piechart",
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 12
        },
        "targets": [
          {
            "expr": "sum by (status) (increase(deployment_total{environment=~\"$environment\", application=~\"$application\", team=~\"$team\"}[7d]))",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              }
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 8,
        "title": "Rollback Rate by Team",
        "type": "table",
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 12
        },
        "targets": [
          {
            "expr": "sum by (team) (increase(deployment_rollback_total{environment=~\"$environment\", application=~\"$application\", team=~\"$team\"}[7d]))",
            "legendFormat": "{{team}}",
            "refId": "A",
            "format": "table"
          },
          {
            "expr": "sum by (team) (increase(deployment_total{environment=~\"$environment\", application=~\"$application\", team=~\"$team\"}[7d]))",
            "legendFormat": "{{team}}",
            "refId": "B",
            "format": "table"
          }
        ],
        "transformations": [
          {
            "id": "merge",
            "options": {}
          },
          {
            "id": "calculateField",
            "options": {
              "binary": {
                "left": "Value #A",
                "operator": "/",
                "right": "Value #B"
              },
              "mode": "binary",
              "reduce": {
                "include": ["Value #A", "Value #B"],
                "reducer": "sum"
              }
            }
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true
              },
              "indexByName": {
                "team": 0,
                "Value #A": 1,
                "Value #B": 2,
                "Value #A / Value #B": 3
              },
              "renameByName": {
                "team": "Team",
                "Value #A": "Rollbacks",
                "Value #B": "Total Deployments",
                "Value #A / Value #B": "Rollback Rate"
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 0.05
                },
                {
                  "color": "red",
                  "value": 0.1
                }
              ]
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Rollback Rate"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "percentunit"
                },
                {
                  "id": "custom.displayMode",
                  "value": "gradient-gauge"
                }
              ]
            }
          ]
        }
      },
      {
        "id": 9,
        "title": "Lead Time Distribution",
        "type": "histogram",
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 12
        },
        "targets": [
          {
            "expr": "deployment_lead_time_hours{environment=~\"$environment\", application=~\"$application\", team=~\"$team\"}",
            "legendFormat": "Lead Time (hours)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              }
            },
            "unit": "h"
          }
        }
      },
      {
        "id": 10,
        "title": "Deployment Performance Metrics",
        "type": "table",
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 20
        },
        "targets": [
          {
            "expr": "avg by (application, environment) (deployment_duration_seconds{environment=~\"$environment\", application=~\"$application\", team=~\"$team\"}) / 60",
            "legendFormat": "{{application}} - {{environment}}",
            "refId": "A",
            "format": "table"
          },
          {
            "expr": "avg by (application, environment) (deployment_mttr_seconds{environment=~\"$environment\", application=~\"$application\", team=~\"$team\"}) / 60",
            "legendFormat": "{{application}} - {{environment}}",
            "refId": "B",
            "format": "table"
          },
          {
            "expr": "avg by (application, environment) (deployment_lead_time_hours{environment=~\"$environment\", application=~\"$application\", team=~\"$team\"})",
            "legendFormat": "{{application}} - {{environment}}",
            "refId": "C",
            "format": "table"
          },
          {
            "expr": "(sum by (application, environment) (increase(deployment_total{status=\"success\", environment=~\"$environment\", application=~\"$application\", team=~\"$team\"}[7d])) / sum by (application, environment) (increase(deployment_total{environment=~\"$environment\", application=~\"$application\", team=~\"$team\"}[7d]))) * 100",
            "legendFormat": "{{application}} - {{environment}}",
            "refId": "D",
            "format": "table"
          }
        ],
        "transformations": [
          {
            "id": "merge",
            "options": {}
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true
              },
              "indexByName": {
                "application": 0,
                "environment": 1,
                "Value #A": 2,
                "Value #B": 3,
                "Value #C": 4,
                "Value #D": 5
              },
              "renameByName": {
                "application": "Application",
                "environment": "Environment",
                "Value #A": "Avg Duration (min)",
                "Value #B": "MTTR (min)",
                "Value #C": "Lead Time (hours)",
                "Value #D": "Success Rate (%)"
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 80
                },
                {
                  "color": "red",
                  "value": 90
                }
              ]
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Avg Duration (min)"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "m"
                },
                {
                  "id": "custom.displayMode",
                  "value": "gradient-gauge"
                },
                {
                  "id": "thresholds",
                  "value": {
                    "mode": "absolute",
                    "steps": [
                      {
                        "color": "green",
                        "value": 0
                      },
                      {
                        "color": "yellow",
                        "value": 15
                      },
                      {
                        "color": "red",
                        "value": 30
                      }
                    ]
                  }
                }
              ]
            },
            {
              "matcher": {
                "id": "byName",
                "options": "MTTR (min)"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "m"
                },
                {
                  "id": "custom.displayMode",
                  "value": "gradient-gauge"
                },
                {
                  "id": "thresholds",
                  "value": {
                    "mode": "absolute",
                    "steps": [
                      {
                        "color": "green",
