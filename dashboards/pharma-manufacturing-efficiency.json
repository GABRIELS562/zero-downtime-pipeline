      },
      {
        "id": 6,
        "title": "Production vs Deployment Windows",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 22
        },
        "targets": [
          {
            "expr": "pharma_production_active",
            "legendFormat": "Production Active",
            "refId": "A"
          },
          {
            "expr": "pharma_deployment_active",
            "legendFormat": "Deployment Active",
            "refId": "B"
          },
          {
            "expr": "pharma_maintenance_window",
            "legendFormat": "Maintenance Window",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 50,
              "gradientMode": "none",
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "lineInterpolation": "stepAfter",
              "lineWidth": 2,
              "pointSize": 5,
              "scaleDistribution": {
                "type": "linear"
              },
              "showPoints": "auto",
              "spanNulls": false,
              "stacking": {
                "group": "A",
                "mode": "none"
              },
              "thresholdsStyle": {
                "mode": "off"
              }
            },
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "INACTIVE"
                  },
                  "1": {
                    "text": "ACTIVE"
                  }
                },
                "type": "value"
              }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "red",
                  "value": 80
                }
              ]
            },
            "unit": "short",
            "min": 0,
            "max": 1
          }
        }
      },
      {
        "id": 7,
        "title": "Deployment Risk Assessment",
        "type": "heatmap",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 22
        },
        "targets": [
          {
            "expr": "deployment_risk_score{application=\"pharma-manufacturing\", line_id=~\"$manufacturing_line\"}",
            "legendFormat": "{{line_id}}",
            "refId": "A",
            "format": "heatmap"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "continuous-GrYlRd"
            },
            "custom": {
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              }
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 8,
        "title": "System Performance During Deployment",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 24,
          "x": 0,
          "y": 30
        },
        "targets": [
          {
            "expr": "(container_memory_usage_bytes{pod=~\"pharma-manufacturing-.*\"} / container_spec_memory_limit_bytes) * 100",
            "legendFormat": "Memory % - {{pod}}",
            "refId": "A"
          },
          {
            "expr": "(rate(container_cpu_usage_seconds_total{pod=~\"pharma-manufacturing-.*\"}[5m]) / container_spec_cpu_quota * container_spec_cpu_period) * 100",
            "legendFormat": "CPU % - {{pod}}",
            "refId": "B"
          },
          {
            "expr": "rate(container_network_receive_bytes_total{pod=~\"pharma-manufacturing-.*\"}[5m]) * 8",
            "legendFormat": "Network In (bps) - {{pod}}",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "gradientMode": "none",
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "pointSize": 5,
              "scaleDistribution": {
                "type": "linear"
              },
              "showPoints": "auto",
              "spanNulls": false,
              "stacking": {
                "group": "A",
                "mode": "none"
              },
              "thresholdsStyle": {
                "mode": "off"
              }
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "red",
                  "value": 80
                }
              ]
            },
            "unit": "percent"
          },
          "overrides": [
            {
              "matcher": {
                "id": "byRegexp",
                "options": ".*Network.*"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "bps"
                }
              ]
            }
          ]
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "builtIn": 1,
          "datasource": "-- Grafana --",
          "enable": true,
          "hide": true,
          "iconColor": "rgba(0, 211, 255, 1)",
          "name": "Annotations & Alerts",
          "type": "dashboard"
        },
        {
          "datasource": "prometheus",
          "enable": true,
          "expr": "pharma_deployment_active == 1 and pharma_production_active == 1",
          "iconColor": "red",
          "name": "GMP Violation",
          "titleFormat": "GMP COMPLIANCE VIOLATION",
          "textFormat": "Deployment attempted during active production"
        },
        {
          "datasource": "prometheus",
          "enable": true,
          "expr": "batch_integrity_score < 100",
          "iconColor": "orange",
          "name": "Batch Integrity",
          "titleFormat": "Batch Integrity Issue",
          "textFormat": "Batch {{$labels.batch_id}} integrity compromised"
        },
        {
          "datasource": "prometheus",
          "enable": true,
          "expr": "manufacturing_line_efficiency_percent < 98",
          "iconColor": "yellow",
          "name": "Efficiency Drop",
          "titleFormat": "Manufacturing Efficiency Below Threshold",
          "textFormat": "Line {{$labels.line_id}} efficiency: {{$value}}%"
        }
      ]
    }
  }
}