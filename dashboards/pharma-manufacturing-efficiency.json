{
  "dashboard": {
    "id": null,
    "title": "Pharma Manufacturing - Efficiency & Compliance During Deployments",
    "tags": ["pharma", "manufacturing", "efficiency", "compliance", "fda", "deployment"],
    "style": "dark",
    "timezone": "UTC",
    "refresh": "10s",
    "time": {
      "from": "now-8h",
      "to": "now"
    },
    "templating": {
      "list": [
        {
          "name": "manufacturing_line",
          "type": "query",
          "query": "label_values(manufacturing_line_efficiency_percent, line_id)",
          "current": {
            "value": "All"
          },
          "multi": true,
          "includeAll": true
        },
        {
          "name": "batch_id",
          "type": "query",
          "query": "label_values(batch_integrity_score, batch_id)",
          "current": {
            "value": "All"
          },
          "multi": true,
          "includeAll": true
        },
        {
          "name": "deployment_window",
          "type": "query",
          "query": "label_values(deployment_status{application=\"pharma-manufacturing\"}, deployment_id)",
          "current": {
            "value": "All"
          },
          "multi": true,
          "includeAll": true
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Manufacturing Efficiency Impact",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "manufacturing_line_efficiency_percent{line_id=~\"$manufacturing_line\"}",
            "legendFormat": "{{line_id}} Efficiency %",
            "refId": "A"
          },
          {
            "expr": "manufacturing_throughput_units_per_hour{line_id=~\"$manufacturing_line\"}",
            "legendFormat": "{{line_id}} Throughput (units/h)",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "gradientMode": "none",
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "pointSize": 5,
              "scaleDistribution": {
                "type": "linear"
              },
              "showPoints": "auto",
              "spanNulls": false,
              "stacking": {
                "group": "A",
                "mode": "none"
              },
              "thresholdsStyle": {
                "mode": "line"
              }
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "red",
                  "value": 98
                }
              ]
            },
            "unit": "percent"
          },
          "overrides": [
            {
              "matcher": {
                "id": "byRegexp",
                "options": ".*Throughput.*"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "short"
                }
              ]
            }
          ]
        },
        "annotations": {
          "list": [
            {
              "datasource": "prometheus",
              "enable": true,
              "expr": "deployment_start_time{application=\"pharma-manufacturing\"}",
              "iconColor": "blue",
              "name": "Deployment Start"
            },
            {
              "datasource": "prometheus",
              "enable": true,
              "expr": "deployment_end_time{application=\"pharma-manufacturing\"}",
              "iconColor": "green",
              "name": "Deployment End"
            }
          ]
        }
      },
      {
        "id": 2,
        "title": "Production Line Status",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "manufacturing_line_status{line_id=~\"$manufacturing_line\"}",
            "legendFormat": "{{line_id}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            },
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "STOPPED",
                    "color": "red"
                  },
                  "1": {
                    "text": "RUNNING",
                    "color": "green"
                  }
                },
                "type": "value"
              }
            ],
            "unit": "short"
          }
        }
      },
      {
        "id": 3,
        "title": "Critical Environmental Sensors",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "sensor_temperature_celsius{critical=\"true\"}",
            "legendFormat": "{{sensor_id}} Temperature (Â°C)",
            "refId": "A"
          },
          {
            "expr": "sensor_humidity_percent{critical=\"true\"}",
            "legendFormat": "{{sensor_id}} Humidity (%)",
            "refId": "B"
          },
          {
            "expr": "sensor_pressure_bar{critical=\"true\"}",
            "legendFormat": "{{sensor_id}} Pressure (bar)",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "gradientMode": "none",
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "pointSize": 5,
              "scaleDistribution": {
                "type": "linear"
              },
              "showPoints": "auto",
              "spanNulls": false,
              "stacking": {
                "group": "A",
                "mode": "none"
              },
              "thresholdsStyle": {
                "mode": "area"
              }
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "transparent",
                  "value": 0
                },
                {
                  "color": "red",
                  "value": 18
                },
                {
                  "color": "green",
                  "value": 20
                },
                {
                  "color": "red",
                  "value": 25
                }
              ]
            },
            "unit": "celsius"
          },
          "overrides": [
            {
              "matcher": {
                "id": "byRegexp",
                "options": ".*Humidity.*"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "percent"
                },
                {
                  "id": "thresholds",
                  "value": {
                    "mode": "absolute",
                    "steps": [
                      {
                        "color": "transparent",
                        "value": 0
                      },
                      {
                        "color": "red",
                        "value": 40
                      },
                      {
                        "color": "green",
                        "value": 45
                      },
                      {
                        "color": "red",
                        "value": 60
                      }
                    ]
                  }
                }
              ]
            },
            {
              "matcher": {
                "id": "byRegexp",
                "options": ".*Pressure.*"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "bar"
                },
                {
                  "id": "thresholds",
                  "value": {
                    "mode": "absolute",
                    "steps": [
                      {
                        "color": "transparent",
                        "value": 0
                      },
                      {
                        "color": "red",
                        "value": 0.8
                      },
                      {
                        "color": "green",
                        "value": 1.0
                      },
                      {
                        "color": "red",
                        "value": 2.5
                      }
                    ]
                  }
                }
              ]
            }
          ]
        }
      },
      {
        "id": 4,
        "title": "Batch Processing Status",
        "type": "table",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "targets": [
          {
            "expr": "batch_integrity_score{batch_id=~\"$batch_id\"}",
            "legendFormat": "{{batch_id}}",
            "refId": "A",
            "format": "table"
          },
          {
            "expr": "batch_processing_duration_seconds{batch_id=~\"$batch_id\"} / 3600",
            "legendFormat": "{{batch_id}}",
            "refId": "B",
            "format": "table"
          },
          {
            "expr": "batch_yield_percent{batch_id=~\"$batch_id\"}",
            "legendFormat": "{{batch_id}}",
            "refId": "C",
            "format": "table"
          }
        ],
        "transformations": [
          {
            "id": "merge",
            "options": {}
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true
              },
              "indexByName": {
                "batch_id": 0,
                "Value #A": 1,
                "Value #B": 2,
                "Value #C": 3
              },
              "renameByName": {
                "batch_id": "Batch ID",
                "Value #A": "Integrity Score",
                "Value #B": "Duration (hours)",
                "Value #C": "Yield (%)"
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 80
                },
                {
                  "color": "red",
                  "value": 90
                }
              ]
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Integrity Score"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "percent"
                },
                {
                  "id": "custom.displayMode",
                  "value": "gradient-gauge"
                },
                {
                  "id": "thresholds",
                  "value": {
                    "mode": "absolute",
                    "steps": [
                      {
                        "color": "red",
                        "value": 0
                      },
                      {
                        "color": "green",
                        "value": 100
                      }
                    ]
                  }
                }
              ]
            },
            {
              "matcher": {
                "id": "byName",
                "options": "Duration (hours)"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "h"
                },
                {
                  "id": "custom.displayMode",
                  "value": "basic"
                },
                {
                  "id": "thresholds",
                  "value": {
                    "mode": "absolute",
                    "steps": [
                      {
                        "color": "green",
                        "value": 0
                      },
                      {
                        "color": "yellow",
                        "value": 3
                      },
                      {
                        "color": "red",
                        "value": 4
                      }
                    ]
                  }
                }
              ]
            },
            {
              "matcher": {
                "id": "byName",
                "options": "Yield (%)"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "percent"
                },
                {
                  "id": "custom.displayMode",
                  "value": "gradient-gauge"
                },
                {
                  "id": "thresholds",
                  "value": {
                    "mode": "absolute",
                    "steps": [
                      {
                        "color": "red",
                        "value": 0
                      },
                      {
                        "color": "yellow",
                        "value": 95
                      },
                      {
                        "color": "green",
                        "value": 98
                      }
                    ]
                  }
                }
              ]
            }
          ]
        }
      },
      {
        "id": 5,
        "title": "FDA Compliance Status",
