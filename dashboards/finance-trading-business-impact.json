{
  "dashboard": {
    "id": null,
    "title": "Finance Trading - Business Impact During Deployments",
    "tags": ["finance", "trading", "business-impact", "revenue", "deployment"],
    "style": "dark",
    "timezone": "America/New_York",
    "refresh": "5s",
    "time": {
      "from": "now-4h",
      "to": "now"
    },
    "templating": {
      "list": [
        {
          "name": "deployment_window",
          "type": "query",
          "query": "label_values(deployment_status{application=\"finance-trading\"}, deployment_id)",
          "current": {
            "value": "All"
          },
          "multi": true,
          "includeAll": true
        },
        {
          "name": "trading_desk",
          "type": "query",
          "query": "label_values(trading_volume_usd, desk)",
          "current": {
            "value": "All"
          },
          "multi": true,
          "includeAll": true
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Revenue Impact During Deployment",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "sum(rate(trading_revenue_usd_total{desk=~\"$trading_desk\"}[1m])) * 60",
            "legendFormat": "Revenue/Min (USD)",
            "refId": "A"
          },
          {
            "expr": "sum(rate(trading_pnl_usd_total{desk=~\"$trading_desk\"}[1m])) * 60",
            "legendFormat": "P&L/Min (USD)",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "gradientMode": "none",
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "pointSize": 5,
              "scaleDistribution": {
                "type": "linear"
              },
              "showPoints": "auto",
              "spanNulls": false,
              "stacking": {
                "group": "A",
                "mode": "none"
              },
              "thresholdsStyle": {
                "mode": "off"
              }
            },
            "unit": "currencyUSD"
          }
        },
        "annotations": {
          "list": [
            {
              "datasource": "prometheus",
              "enable": true,
              "expr": "deployment_start_time{application=\"finance-trading\"}",
              "iconColor": "blue",
              "name": "Deployment Start"
            },
            {
              "datasource": "prometheus", 
              "enable": true,
              "expr": "deployment_end_time{application=\"finance-trading\"}",
              "iconColor": "green",
              "name": "Deployment End"
            }
          ]
        }
      },
      {
        "id": 2,
        "title": "Trading Volume Impact",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "sum(rate(trading_volume_usd_total{desk=~\"$trading_desk\"}[1m])) * 60",
            "legendFormat": "Volume/Min (USD)",
            "refId": "A"
          },
          {
            "expr": "sum(rate(trading_orders_total{desk=~\"$trading_desk\"}[1m])) * 60",
            "legendFormat": "Orders/Min",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "gradientMode": "none",
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "pointSize": 5,
              "scaleDistribution": {
                "type": "linear"
              },
              "showPoints": "auto",
              "spanNulls": false,
              "stacking": {
                "group": "A",
                "mode": "none"
              },
              "thresholdsStyle": {
                "mode": "off"
              }
            },
            "unit": "currencyUSD"
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Orders/Min"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "short"
                }
              ]
            }
          ]
        }
      },
      {
        "id": 3,
        "title": "Pre/During/Post Deployment Metrics",
        "type": "stat",
        "gridPos": {
          "h": 6,
          "w": 24,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "avg_over_time(trading_revenue_usd_total{desk=~\"$trading_desk\"}[30m] offset 1h)",
            "legendFormat": "Pre-Deploy Revenue (30m avg)",
            "refId": "A"
          },
          {
            "expr": "avg_over_time(trading_revenue_usd_total{desk=~\"$trading_desk\"}[30m])",
            "legendFormat": "Current Revenue (30m avg)",
            "refId": "B"
          },
          {
            "expr": "avg_over_time(trading_latency_p99_milliseconds{desk=~\"$trading_desk\"}[30m] offset 1h)",
            "legendFormat": "Pre-Deploy Latency (ms)",
            "refId": "C"
          },
          {
            "expr": "avg_over_time(trading_latency_p99_milliseconds{desk=~\"$trading_desk\"}[30m])",
            "legendFormat": "Current Latency (ms)",
            "refId": "D"
          },
          {
            "expr": "avg_over_time(trading_success_rate_percent{desk=~\"$trading_desk\"}[30m] offset 1h)",
            "legendFormat": "Pre-Deploy Success Rate (%)",
            "refId": "E"
          },
          {
            "expr": "avg_over_time(trading_success_rate_percent{desk=~\"$trading_desk\"}[30m])",
            "legendFormat": "Current Success Rate (%)",
            "refId": "F"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 80
                },
                {
                  "color": "red",
                  "value": 90
                }
              ]
            },
            "unit": "short"
          },
          "overrides": [
            {
              "matcher": {
                "id": "byRegexp",
                "options": ".*Revenue.*"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "currencyUSD"
                }
              ]
            },
            {
              "matcher": {
                "id": "byRegexp",
                "options": ".*Latency.*"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "ms"
                }
              ]
            },
            {
              "matcher": {
                "id": "byRegexp",
                "options": ".*Success Rate.*"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "percent"
                }
              ]
            }
          ]
        }
      },
      {
        "id": 4,
        "title": "Trading Desk Performance",
        "type": "table",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 14
        },
        "targets": [
          {
            "expr": "sum by (desk) (rate(trading_revenue_usd_total{desk=~\"$trading_desk\"}[5m])) * 300",
            "legendFormat": "{{desk}}",
            "refId": "A",
            "format": "table"
          },
          {
            "expr": "sum by (desk) (rate(trading_volume_usd_total{desk=~\"$trading_desk\"}[5m])) * 300",
            "legendFormat": "{{desk}}",
            "refId": "B",
            "format": "table"
          },
          {
            "expr": "avg by (desk) (trading_latency_p99_milliseconds{desk=~\"$trading_desk\"})",
            "legendFormat": "{{desk}}",
            "refId": "C",
            "format": "table"
          }
        ],
        "transformations": [
          {
            "id": "merge",
            "options": {}
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true
              },
              "indexByName": {
                "desk": 0,
                "Value #A": 1,
                "Value #B": 2,
                "Value #C": 3
              },
              "renameByName": {
                "desk": "Trading Desk",
                "Value #A": "Revenue (5m)",
                "Value #B": "Volume (5m)",
                "Value #C": "Latency P99 (ms)"
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 80
                },
                {
                  "color": "red",
                  "value": 90
                }
              ]
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Revenue (5m)"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "currencyUSD"
                },
                {
                  "id": "custom.displayMode",
                  "value": "gradient-gauge"
                }
              ]
            },
            {
              "matcher": {
                "id": "byName",
                "options": "Volume (5m)"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "currencyUSD"
                },
                {
                  "id": "custom.displayMode",
                  "value": "gradient-gauge"
                }
              ]
            },
            {
              "matcher": {
                "id": "byName",
                "options": "Latency P99 (ms)"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "ms"
                },
                {
                  "id": "custom.displayMode",
                  "value": "lcd-gauge"
                },
                {
                  "id": "thresholds",
                  "value": {
                    "mode": "absolute",
                    "steps": [
                      {
                        "color": "green",
                        "value": 0
                      },
                      {
                        "color": "yellow",
                        "value": 40
                      },
                      {
                        "color": "red",
                        "value": 50
                      }
                    ]
                  }
                }
              ]
            }
          ]
        }
      },
      {
        "id": 5,
        "title": "Risk Metrics During Deployment",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 14
        },
        "targets": [
          {
            "expr": "sum(trading_var_usd{desk=~\"$trading_desk\"})",
            "legendFormat": "Value at Risk (USD)",
            "refId": "A"
          },
          {
            "expr": "sum(trading_exposure_usd{desk=~\"$trading_desk\"})",
            "legendFormat": "Total Exposure (USD)",
            "refId": "B"
          },
          {
            "expr": "sum(trading_margin_utilization_percent{desk=~\"$trading_desk\"})",
            "legendFormat": "Margin Utilization (%)",
            "refId": "C"
          },
          {
            "expr": "sum(trading_counterparty_risk_score{desk=~\"$trading_desk\"})",
            "legendFormat": "Counterparty Risk Score",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 70
                },
                {
                  "color": "red",
                  "value": 85
                }
              ]
            },
            "unit": "short"
          },
          "overrides": [
            {
              "matcher": {
                "id": "byRegexp",
                "options": ".*USD.*"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "currencyUSD"
                }
              ]
            },
            {
              "matcher": {
                "id": "byRegexp",
                "options": ".*Percent.*"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "percent"
                }
              ]
            }
          ]
        }
      },
      {
        "id": 6,
        "title": "Market Hours Compliance",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 8,
          "x": 0,
          "y": 22
        },
        "targets": [
          {
            "expr": "trading_market_hours_active",
            "legendFormat": "Market Hours Active",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "red",
                  "value": 1
                }
              ]
            },
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "AFTER HOURS",
                    "color": "green"
                  },
                  "1": {
                    "text": "MARKET HOURS",
                    "color": "red"
                  }
                },
                "type": "value"
              }
            ],
            "unit": "short"
          }
        }
      },
      {
        "id": 7,
        "title": "Deployment Status",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 8,
          "x": 8,
          "y": 22
        },
        "targets": [
          {
            "expr": "deployment_status{application=\"finance-trading\"}",
            "legendFormat": "Deployment Status",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 1
                },
                {
                  "color": "red",
                  "value": 2
                }
              ]
            },
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "STABLE",
                    "color": "green"
                  },
                  "1": {
                    "text": "DEPLOYING",
                    "color": "yellow"
                  },
                  "2": {
                    "text": "FAILED",
                    "color": "red"
                  }
                },
                "type": "value"
              }
            ],
            "unit": "short"
          }
        }
      },
      {
        "id": 8,
        "title": "Emergency Stop Status",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 8,
          "x": 16,
          "y": 22
        },
        "targets": [
          {
            "expr": "trading_emergency_stop_active",
            "legendFormat": "Emergency Stop",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "red",
                  "value": 1
                }
              ]
            },
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "NORMAL",
                    "color": "green"
                  },
                  "1": {
                    "text": "EMERGENCY STOP",
                    "color": "red"
                  }
                },
                "type": "value"
              }
            ],
            "unit": "short"
          }
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "builtIn": 1,
          "datasource": "-- Grafana --",
          "enable": true,
          "hide": true,
          "iconColor": "rgba(0, 211, 255, 1)",
          "name": "Annotations & Alerts",
          "type": "dashboard"
        },
        {
          "datasource": "prometheus",
          "enable": true,
          "expr": "trading_deployment_active == 1 and trading_market_hours_active == 1",
          "iconColor": "red",
          "name": "Market Hours Violation",
          "titleFormat": "COMPLIANCE VIOLATION",
          "textFormat": "Deployment attempted during market hours"
        },
        {
          "datasource": "prometheus",
          "enable": true,
          "expr": "trading_revenue_usd_total < trading_revenue_usd_total offset 1h * 0.95",
          "iconColor": "orange",
          "name": "Revenue Drop",
          "titleFormat": "Revenue Impact",
          "textFormat": "Revenue dropped >5% from previous hour"
        }
      ]
    }
  }
}